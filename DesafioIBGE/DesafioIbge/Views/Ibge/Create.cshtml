@model IbgeViewModel

<h2 class="text-center mb-5 pt-5">Criação de dados</h2>

<form id="container" class="container mt-5 pt-4" asp-controller="Ibge" asp-action="Create" method="post">

    <div id="id" class="row justify-content-center text-center border-0">
        
        <label asp-for="Id" class="col-auto fw-bold">Código</label>
        <input asp-for="Id" type="number" maxlength="7" title="O código deve ter 7 caracteres." class="col-8 rounded rounded-pill" />
        <span asp-validation-for="Id" class="form-check row text-danger"></span>
    </div>

    <div id="state" class="row justify-content-center text-center border-0">
        
        <label asp-for="State" class="col-auto fw-bold">Estado</label>
        <input asp-for="State" type="text" class="col-8 rounded rounded-pill" />
        <span asp-validation-for="State" class="form-check row text-danger"></span>
    </div>

    <div id="city" class="row justify-content-center text-center border-0">
        
        <label asp-for="City" class="col-auto fw-bold">Cidade</label>
        <input asp-for="City" class="col-8 rounded rounded-pill" />
        <span asp-validation-for="City" class="form-check row text-danger"></span>
    </div>

    <div id="botoes" class="row d-flex justify-content-center">
        
        <button type="submit" class="btn btn-success col-2 m-2">Criar</button>
        <button class="btn btn-secondary col-2 m-2" asp-controller="Home" asp-action="Index">Cancelar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}