@model LoginViewModel

<h1 class="text-center mb-5 pt-5">Login</h1>

<form id="container" class="container mt-5 pt-4" asp-controller="Account" asp-action="Login" method="post">

    <div id="email" class="row justify-content-center text-center border-0">

        <label class="col-auto" asp-for="Email">Email</label>
        <input class="col-8 rounded rounded-pill" type="email" asp-for="Email" />
        <span asp-validation-for="Email" class="form-check row text-danger"></span>
    </div>

    <div id="senha" class="row justify-content-center text-center border-0">

        <label class="col-auto" asp-for="Senha">Senha</label>
        <input class="col-8 rounded rounded-pill" type="password" asp-for="Senha" />
        <span asp-validation-for="Senha" class="form-check row text-danger"></span>
    </div>

    <div id="botoes" class="d-flex justify-content-center">

        <button type="submit" class="btn btn-success m-2">Login</button>
        <button class="btn btn-secondary m-2 p-2" asp-controller="Home" asp-action="Index">Cancelar</button>

    </div>
</form>